{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": [
      "react",
      "bun"
    ],
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "noEmit": false,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/ai",
    "**/__tests__/**/*",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
}