{
  "name": "@whole-ends-kneel/bgio-engine",
  "version": "0.0.0",
  "description": "Witch Trial boardgame.io engine - Complete game logic, React components, and hooks",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/*": {
      "import": "./dist/*.mjs",
      "require": "./dist/*.js",
      "types": "./dist/*.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "keywords": [
    "boardgame.io",
    "witch-trial",
    "game-engine",
    "board-game",
    "multiplayer"
  ],
  "peerDependencies": {
    "react": "^19.0.0"
  },
  "dependencies": {
    "@ant-design/icons": "^5.0.0",
    "antd": "^6.0.0",
    "boardgame.io": "^0.50.2",
    "es-toolkit": "^1.44.0",
    "nanoid": "^5.1.6"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.8.3"
  }
}