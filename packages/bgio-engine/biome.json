{
  "$schema": "https://biomejs.dev/schemas/2.3.15/schema.json",
  "extends": ["../../biome.json"],
  "root": false,
  "linter": {
    "rules": {
      "recommended": false,
      "performance": {
        "noImgElement": "warn",
        "noUnwantedPolyfillio": "warn",
        "useGoogleFontPreconnect": "warn"
      },
      "style": {
        "noHeadElement": "warn",
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "paths": {
              "lodash": "Use Effect functions instead",
              "ramda": "Use Effect functions instead"
            }
          }
        }
      },
      "suspicious": {
        "noDocumentImportInPage": "error",
        "noHeadImportInDocument": "error",
        "useGoogleFontDisplay": "warn"
      }
    }
  }
}
