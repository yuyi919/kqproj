{
  "$schema": "https://biomejs.dev/schemas/2.3.15/schema.json",
  "extends": ["../../biome.json"],
  "root": false,
  "linter": {
    "rules": {
      "recommended": false,
      "performance": {
        "noImgElement": "warn",
        "noUnwantedPolyfillio": "warn",
        "useGoogleFontPreconnect": "warn"
      },
      "style": {
        "noHeadElement": "warn",
        "useConst": "warn",
        "noCommonJs": "warn",
        "useNodeAssertStrict": "warn",
        "useNodejsImportProtocol": "warn",
        "useFilenamingConvention": {
          "level": "warn",
          "options": {
            "strictCase": true,
            "filenameCases": ["kebab-case", "camelCase", "PascalCase"]
          }
        },
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "paths": {
              "lodash": "Use Effect functions instead",
              "ramda": "Use Effect functions instead"
            }
          }
        }
      },
      "suspicious": {
        "noUnassignedVariables": "info",
        "noDocumentImportInPage": "error",
        "noHeadImportInDocument": "error",
        "useGoogleFontDisplay": "warn"
      },
      "nursery": {
        "noUnusedExpressions": "info"
      },
      "correctness": {
        "noUnusedImports": {
          "fix": "none",
          "level": "info"
        }
      }
    }
  }
}
