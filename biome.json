{
  "$schema": "https://biomejs.dev/schemas/2.3.15/schema.json",
  "root": true,
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "files": {
    "includes": [
      "biome.json",
      "package.json",
      "**/src/**/*",
      "!**/dist/**/*",
      "!**/node_modules",
      "!**/dist",
      "!**/coverage",
      "!**/*.js"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "linter": {
    "includes": ["**/src/**/*", "!**/src/**/*.test.*"],
    "enabled": true,
    "rules": {
      "recommended": false,
      "a11y": {
        "noStaticElementInteractions": "off",
        "useKeyWithClickEvents": "off"
      },
      "complexity": "off",
      "correctness": "off",
      "performance": {
        "noImgElement": "warn",
        "noUnwantedPolyfillio": "warn",
        "useGoogleFontPreconnect": "warn"
      },
      "style": { "noHeadElement": "warn", "noNonNullAssertion": "off" },
      "suspicious": {
        "noAssignInExpressions": "off",
        "noConfusingVoidType": "off",
        "noConstEnum": "off",
        "noDocumentImportInPage": "error",
        "noExplicitAny": "off",
        "noHeadImportInDocument": "error",
        "noNonNullAssertedOptionalChain": "off",
        "useGoogleFontDisplay": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "trailingCommas": "all",
      "semicolons": "always",
      "arrowParentheses": "always",
      "quoteStyle": "double",
      "bracketSpacing": true
    }
  }
}
